{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "../types",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "isolatedDeclarations": true,
        "isolatedModules": true,
        "noEmit": false,
        "allowJs": false,
    },
    "include": [
        "./**/*.ts",
    ]
}
